rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper to check if user is authenticated and matches the requested resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Existing Collections (Assuming defaults, but making them explicit/safe)
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    match /work_sessions/{sessionId} {
      // Allow read/write if the resource's userId matches auth uid
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // --- NEW: NorthStar Journaling & Cyclist System ---
    match /daily_journals/{journalId} {
      // Allow read/write if the user owns the data OR if accessing the legacy prototype data (Migration)
      allow read, write: if request.auth != null && (
         request.auth.uid == resource.data.userId || 
         resource.data.userId == "dev_prototype_user_123" ||
         request.resource.data.userId == "dev_prototype_user_123" // For writing back if necessary (unlikely)
      );
      
      // Allow creation if authenticated
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
  }
}
