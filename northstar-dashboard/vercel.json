{
    "cleanUrls": true,
    "rewrites": [
        {
            "source": "/api/ping",
            "destination": "/api/ping.ts"
        },
        {
            "source": "/api/sessions/manage",
            "destination": "/api/sessions/manage.ts"
        },
        {
            "source": "/api/:path*",
            "destination": "/api/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/**/*.ts": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
}